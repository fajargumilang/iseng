  <body>
    <h1>Teken tombolnya nel</h1>
    <button onclick="show()">Show</button>

    <div class="hehe" id="hehe" style="display: none"></div>

    <script>
      function show() {
        const haha = [
          "Emang lu cari yang kaya gimana?.",
          "Kriteria lu emang seperti apa?.",
          "Kriteria yang bau ketek ga?.",
          "Kriteria yang badboy?.",
        ];

        const randomIndex = Math.floor(Math.random() * haha.length);
        document.getElementById("hehe").innerText = haha[randomIndex];
        document.getElementById("hehe").style.display = "block";
      }
    </script>
